@model WilProjectMVC2021.Models.Register
<section class="contact-us section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-12">
                <div class="contact-form-area m-top-30">
                    <br />
                    <h3>Register an account here</h3>
                    <br />

                    <form action="Register" method="post" role="form">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-12">

                            <div class="form-group">
                                <div class="icon"><i class="fa fa-envelope"></i></div>
                                <h4>Name</h4>
                                <input class="form-control" data-val="true" data-val-required="The name field is required." id="Name" name="Name" placeholder="Name" type="text" value="" required />
                            </div>
                        </div>
                        <div class="col-12">

                            <div class="form-group">
                                <div class="icon"><i class="fa fa-lock"></i></div>
                                <h4>Cellphone</h4>
                                <input class="form-control" data-val="true" data-val-required="The Cellphone Field is required" id="Cellphone" name="Cellphone" placeholder="Cellphone" type="text" required />

                            </div>
                        </div>
                        <div class="col-12">

                            <div class="form-group">
                                <div class="icon"><i class="fa fa-envelope"></i></div>
                                <h4>Email Address</h4>
                                <input class="form-control" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email2" name="Email" placeholder="Email Address" type="text" value="" required />

                            </div>
                        </div>
                        <div class="col-12">

                            <div class="form-group">
                                <div class="icon"><i class="fa fa-lock"></i></div>
                                <h4>Password</h4>
                                <input class="form-control" data-val="true" data-val-required="The Password field is required." id="Password2" name="Password" placeholder="Password" type="password" required />

                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-12">
                                <input type="submit" value="Register" class="btn_theme_green" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <br />
                                <br />
                                <br />
                                <p>
                                    Already have an account? <a href="@Url.Action("Login")" class="btn btn-group btn-sm">Login</a>
                                </p>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>